<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/dialog_corner_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dianpu_icon"
            />
            <TextView
                android:id="@+id/dianpu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"

                />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/a_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/b_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/a_type"
            />
        <TextView
            android:id="@+id/c_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_below="@+id/b_type"
            />

        <com.xfkc.caimai.customview.StateButton
            android:id="@+id/pay_btn"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="查看"
            android:textSize="14dp"
            app:normalBackgroundColor="@color/ff704d"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/ff704d"
            app:pressedTextColor="@color/white"
            app:radius="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
