<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <!-- //======================最顶部=========== 轮播图=====开始======================= -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="320dp">

        <com.dev.customview.AdViewPaper
            android:id="@+id/adViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- ////////////////////默认顶部视图开始//////////////// -->

        <FrameLayout
            android:id="@+id/top_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/back_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/circle_gray_shape"
                android:drawableRight="@drawable/gd_back_btn"
                android:padding="4dp"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/shoppingcar_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/circle_gray_shape"
                android:drawableRight="@drawable/gd_shopingcar_btn"
                android:padding="4dp"
                android:textColor="#fff"
                android:textSize="15sp"
                android:visibility="gone" />
        </FrameLayout>
        <!-- //////////////////////////默认顶部视图结束//////////////////////////////// -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/point_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/touming_shape"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="1/3"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- //======================最顶部=========== 轮播图=====结束======================= -->


    <!-- ======================商品价格位置==开始===================== -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goodsTitle_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我们的宝贝都是好的"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/goodsStyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/goods_discroubTitle_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:text="为了赶在夏天"
            android:textColor="#8f000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goodsPrace_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="99.0康币"
                android:textColor="#ff0000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/goodsNumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售4"
                android:textColor="#8f000000"
                android:textSize="15sp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed" />

        <TextView
            android:id="@+id/goodsOtherTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:gravity="center"

            android:text="支持门店自提   全场满300包邮"
            android:textColor="#8f000000"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#ededed" />

        <TextView
            android:id="@+id/goodsTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center|left"
            android:text="请选择规格"
            android:textColor="#000000"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed" />

        <FrameLayout
            android:id="@+id/linertime"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:focusable="false"
           >

            <TextView
                android:id="@+id/learntime_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="请选择数量"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="2dp"
                android:focusableInTouchMode="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/goods_remove_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/delete"
                    android:focusable="false"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/goodsNum"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:gravity="center"

                    android:text="x1"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/goods_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/add"
                    android:focusable="false"
                    android:textColor="#000000" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="邮费"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/youfei_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="0.00康币"
                android:textColor="#525252"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed" />
    </LinearLayout>
    <!-- ======================商品价格位置==结束===================== -->

</LinearLayout>