<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_liner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:drawableLeft="@mipmap/dianpu_icon"
            android:drawablePadding="5dp"
            android:text="北京一号店"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="卖家已发货"
            android:textColor="#74E587"
            android:textSize="10sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@mipmap/error_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我们的宝贝都是好的，没有坏的我们的宝贝都是好"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/goods_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_name"
                android:layout_marginTop="5dp"
                android:text="为了赶在夏天滋润你"
                android:textColor="#5f5f5f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/goods_prace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_des"
                android:layout_marginTop="5dp"
                android:text="￥49.00 康币"
                android:textColor="@color/ff704d"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="x1"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/goods_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/psz_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="配送中"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/goods_allnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共计1件商品"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/goods_allprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="49.00"
                android:textColor="@color/ff704d"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/goods_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="康币"
                android:textColor="@color/ff704d"
                android:textSize="14sp" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ededed" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lookLogistics_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_shape"
                android:clickable="true"
                android:padding="5dp"
                android:text="查看物流"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/suregetGoods_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/black_shape"
                android:clickable="true"
                android:padding="5dp"
                android:text="确认收货"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:background="#ededed" />
</LinearLayout>