<?xml version="1.0" encoding="utf-8"?>
<com.recycle.sliding.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fristWord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center|left"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:text="水果"
            android:textColor="#000000"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/viewline"
            android:background="#ededed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/itemliner_sliding_delete"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_toRightOf="@+id/item_sliding_lay"
                android:background="#ededed"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_sliding_delete"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_click_red_havebackground"
                    android:gravity="center"
                    android:text="删 除"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/item_sliding_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ededed"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/listitem_sharp_selector"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <CheckBox
                            android:id="@+id/checkBox"
                            style="@style/checkBoxgreen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0"
                            android:focusable="false"
                            android:textColor="#fff"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/pic"
                            android:layout_width="96dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/error_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/testTitle"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/isnews"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:text="在线测评试卷001f"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/guig_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="0"

                                    android:text="140-180*4个"
                                    android:textColor="#7f000000"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/discroub_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_marginTop="10dp"
                                android:maxLines="1"
                                android:text="eeee"
                                android:textColor="#7f000000"
                                android:textSize="15sp" />

                            <FrameLayout
                                android:id="@+id/linertime"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"

                                android:focusable="false">

                                <TextView
                                    android:id="@+id/learntime_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:text="￥65"
                                    android:textColor="#ff0000"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:layout_marginRight="2dp"
                                    android:focusableInTouchMode="false"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/goods_remove_btn"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10dp"
                                        android:focusable="false"
                                        android:src="@drawable/remove_img"
                                        android:textColor="#000000" />

                                    <TextView
                                        android:id="@+id/goodsNum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"

                                        android:gravity="center"

                                        android:text="1"
                                        android:textColor="#000000"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:id="@+id/goods_add_btn"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:focusable="false"
                                        android:src="@drawable/add_img"
                                        android:textColor="#000000" />
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


</com.recycle.sliding.SlidingButtonView>

