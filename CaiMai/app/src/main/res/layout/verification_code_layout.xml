<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corner_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="请输入支付密码"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f1f1f1" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/ff704d"
            android:text="0.00 康币"
            />

        <TextView
            android:id="@+id/kbye_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/time_text_color"
            android:text="康币余额 0.00"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/whilte"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#ededed" />

            <EditText
                android:id="@+id/ed_code0"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#000" />

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#ededed" />

            <EditText
                android:id="@+id/ed_code1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#000" />

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#ededed" />

            <EditText
                android:id="@+id/ed_code2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#000" />

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#ededed" />

            <EditText
                android:id="@+id/ed_code3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#000" />

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#ededed" />

            <EditText
                android:id="@+id/ed_code4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#000" />

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#ededed" />

            <EditText
                android:id="@+id/ed_code5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textColor="#000" />

            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#ededed" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/f1f1f1"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <TextView
                android:id="@+id/commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>