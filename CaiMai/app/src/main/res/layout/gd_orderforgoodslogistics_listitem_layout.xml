<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff" >

        <LinearLayout
            android:id="@+id/fristLiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/logisticscontent_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:autoLink="email|phone|web"
                android:text="下面的这道题就厉害了，关于思域车，电话：07186986假如它要超你车，你敢和它超吗？"
                android:textColor="#525252"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/logistics_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-03-02 16:00"
                    android:textColor="#525252"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_below="@+id/father_imgbtn"
                android:background="#ededed" />

            <ImageView
                android:id="@+id/father_imgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@mipmap/readed" />

            <View
                android:id="@+id/lineView"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#ededed" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>