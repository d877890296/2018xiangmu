<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/itemliner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@mipmap/error_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="我们的宝贝都是好的"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/goods_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_name"
                android:layout_marginTop="5dp"
                android:text="为了赶在夏天滋润你"
                android:textColor="#5f5f5f"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/goods_prace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_des"
                android:layout_marginTop="5dp"
                android:text="49.00 康币"
                android:textColor="@color/ff704d"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="x1"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
